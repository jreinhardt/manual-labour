{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title" : "Common schema components",
  "description" : "Components that are reused using JSON References",
  "obj_id" : {
    "type" : "string",
    "description" : "ID of the referenced object",
    "pattern" : "^[a-zA-Z0-9_-]*$"
  },
  "step_id" : {
    "type" : "string",
    "description" : "ID of the referenced step",
    "pattern" : "^[a-zA-Z0-9_-]*$"
  },
  "step_alias" : {
    "type" : "string",
    "description" : "Alias for a step",
    "pattern" : "^[a-zA-Z0-9]*$"
  },
  "blob_id" : {
    "type" : "string",
    "description" : "ID of the referenced blob",
    "pattern" : "^[a-zA-Z0-9_-]*$"
  },
  "graph_id" : {
    "type" : "string",
    "description" : "ID of the referenced graph",
    "pattern" : "^[a-zA-Z0-9_-]*$"
  },
  "timedelta" : {
    "type" : "object",
    "description" : "A timespan",
    "properties" : {
      "seconds" : {"type" : "integer"},
      "minutes" : {"type" : "integer"},
      "hours" : {"type" : "integer"},
      "days" : {"type" : "integer"}
    },
    "default" : {},
    "additionalProperties" : false
  },
  "object_namespace" : {
    "type" : "object",
    "description" : "local names for Objects",
    "patternProperties" : {
      "^([a-zA-Z][0-9a-zA-Z_]*)$" : {
        "$ref" : "references.json#/obj_ref"
      }
    },
    "default" : {},
    "additionalProperties" : false
  },
  "file_namespace" : {
    "type" : "object",
    "description" : "local names for Files",
    "patternProperties" : {
      "^([a-zA-Z][0-9a-zA-Z_]*)$" : {
        "$ref" : "references.json#/file_ref"
      }
    },
    "default" : {},
    "additionalProperties" : false
  },
  "image_namespace" : {
    "type" : "object",
    "description" : "local names for Images",
    "patternProperties" : {
      "^([a-zA-Z][0-9a-zA-Z_]*)$" : {
        "$ref" : "references.json#/img_ref"
      }
    },
    "default" : {},
    "additionalProperties" : false
  }
}

